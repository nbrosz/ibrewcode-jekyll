<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
	<channel>
		<title>{{ site.title | xml_escape }} - Game Dev</title>
		<description>{{ site.tagline }}</description>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
		{% for post in site.categories["Game Dev"] %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<pubDate>{% unless post.last_modified_at %}{{ post.date | date_to_rfc822 }}{% else %}{{ post.last_modified_at | date_to_rfc822 }}{% endunless %}</pubDate>
				{% if post.excerpt %}
					<description><![CDATA[{{ post.excerpt | xml_escape }}]]></description>
					<content:encoded><![CDATA[{{ post.content | xml_escape }}]]></content:encoded>
				{% else %}
					<content:encoded><![CDATA[{{ post.content | xml_escape }}]]></content:encoded>
				{% endif %}
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
                {% for tag in post.tags %}
                    <category>{{tag}}</category>
                {% endfor %}
			</item>
		{% endfor %}
	</channel>
</rss>